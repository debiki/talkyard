{
  "name": "to-talkyard",
  "version": "0.1.0",
  "description": "Converts phpBB, Disqus, WordPress etc export files to JSON for importing to Talkyard.",
  "repository": {
    "type": "git",
    "url": "https://github.com/debiki/to-talkyard/"
  },
  "author": "Debiki AB and Kaj Magnus Lindberg",
  "license": "GPLv3",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\""
  },
  "dependencies": {
    "async": "^2.6.0",
    "chalk": "^2.2.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.0",
    "sax": "^1.2.4"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.14.6",
    "@types/sax": "^1.0.1",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "nodemon": "^1.18.10",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "typescript": "^4.0.5",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3"
  }
}
