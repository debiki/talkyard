$paddingLeft = 12px;
$paddingTopBtn = 7px;

// BEM name: esMB (no longer esMetabar)

.esMetabar_extra
  border-top: 1px solid #ababab;
  padding: 11px 7px 12px $paddingLeft;
  .icon-mail
    margin-bottom: 13px;
    &:before
      font-size: 105%;
      color: hsl(0, 0%, 30%);
      margin-right: 5px;

.esMetabar_msgMmbrs
  clearfix();

.esMetabar_msgMmbr
  float: left;
  white-space: nowrap;
  margin-right: 1.2em;
  .edAvtr
    float: none;
    display: inline-block;
    margin-right: 5px;
    vertical-align: middle;

.esMetabar_msgMmbr_username
  vertical-align: middle;

.esMetabar
  clear: both;
  margin: 18px 0 17px  // [MTBMGTP]
  border: $pageSectionBorder;
  background: $pageSectionBackground;
  padding: 0
  border-left: none
  border-right: none

  .dw-cmts-tlbr-head
    display: flex;

    .dw-cmts-tlbr-summary
      padding: $paddingTopBtn 55px $paddingTopBtn $paddingLeft; // COULD extract var, 50px [KP409f]
      flex: 1;

      & > li
        display: inline-block;
        margin: 0 0 0 13px;
        color: hsl(0, 0%, 23%);

      & > li:first-child
        margin-left: 0;

      .dw-cmts-count
        font-size: 17px

      .dw-u-lgi-lgo
        display: inline // not block, which the topbar often sets

      .dw-a-login
        color: hsl(0, 0%, 43%)

      // Make the logout button look like a button
      .dw-a-login,
      .dw-a-logout
        background: white;
        color: hsl(0, 0%, 20%) !important;
        padding: 3px 11px;
        border: 1px solid hsl(0, 0%, 90%);

      .s_MB_Name,
      .dw-a-login,
      .dw-a-logout
        &:hover
          background: hsl($uiHue, 100%, 96%);
          color: hsl($uiHue, 100%, 25%);
          border-color: hsl($uiHue, 100%, 80%);

      .dw-page-notf-level
        cursor: pointer

    .c_NavBs
      padding: $paddingTopBtn 19px $paddingTopBtn 12px;

    .dw-cmts-tlbr-open
      width: 50px; // COULD extract variable, 50px [KP409f]
      right: 0;
      top: 0;
      background: #ddd;
      border: none;
      font-size: 130%;

  .dw-cmts-tlbr-details
    padding: 8px 10px 16px

.esMB_Dtls_Ntfs_Lbl
  margin-bottom: 5px;

.esMetabar_summarize
  display: none;  // For now. Too many buttons, now when there're a Disc and a Progr sections [DSCPRG]
  border-top: 1px solid hsl(0, 0%, 72%);
  padding: 1em $paddingLeft;


.DW.dw-vt .dw-cmts-tlbr
  margin: 20px 0 45px;  // but want only 10? if dw-flat  [MTBMGTP]



