//
html.c_IsSupAdm,
html.c_IsSupStf

  // Discussions
  .esP_By_U,
  .esP_By_F,
  .dw-rr,
  // Username menu, notifications therein
  .s_MM .esNotf_by,
  // Contextbar
  .esCtxbar .esAvtrName_username,
  .esCtxbar .esAvtrName_fullName,
  // About dialog
  .s_UD_Un,
  .s_UD_FN,
  .s_UD_Em samp,
  // User profile page: about panel
  .esUP_Un,
  .esUP_FN,
  // User profile page: prefs tab
  .s_UP_Prefs samp,
  .e_UP_Prefs_FN input,
  // User profile page: notfs tab
  .esNotfs .esNotf_by,
  // User profile page: account tab
  .s_UP_EmLg .s_UP_EmLg_EmL_It_Em,
  .s_UP_EmLg .s_UP_EmLg_LgL_It_Em,
