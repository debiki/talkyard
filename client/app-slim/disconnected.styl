.s_NoInetM  // [NOINETMSG]
  display: none;

.c_MaintWorkM,
.s_NoInetM  // [NOINETMSG]
  margin: 5px 5px 0;
  padding: 4px 10px 5px 12px;
  font-size: 14.5px;
  color: $errorColor;
  background: $errorBackground;
  border: 1px solid $errorColor;
  @media (min-width: 1000px)
    // Why won't these margins work, unless .esTopbar_custom uses  display: flex?
    margin-left: auto;
    margin-right: auto;
    padding: 10px 22px 13px
    font-size: 15.5px;

