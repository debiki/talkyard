
.c_AliasB + div .c_TtlE_TtlI
  margin-top: 10px;

.esTtlEdtr_urlSettings
  background: hsl(0, 0%, 99%);
  border: 1px solid hsl(0, 0%, 92%);
  padding: 11px 20px 5px 10px;
  .help-block
    color: hsl(0, 0%, 32%);
    margin-bottom: 0;

.dw-p-ttl-e
  margin-top: (30 + 15)px;  // 30 + 5 = title margin + padding
  margin-bottom: 38px;
  max-width: 100%;
  width: 730px;

  // Without this, hard to see where the edit-title fields end.
  background: hsl(0, 0%, 94%);
  padding: 15px;

  .form-horizontal
    margin: 15px 0;

  .input-group
    width: 100%;

  .dw-i-layout
    width: auto;

  .dw-save-btns-etc a
    float: none;
    margin-left: 10px;
    opacity: 0.75;
    position: relative;
    top: 3px;
    font-size: 14px;

    &.icon-settings:before
      opacity: 0.85;

.esTtlEdtr_metaTags .form-group
  margin-bottom: 10px;

.esTtlEdtr_openAdv
  margin: 10px 20px 20px 0;
  display: inline-block;

