.dw-login-modal
  max-width: 520px; // else like 600, too wide


// On small screens, like iPhone 5 and login popup windows, make the dialog full-screen.
@media (max-width: 590px) // $veryNarrowLimit)
  .dw-login-modal
    margin: 0;
    width: 100%;
    height: 100%;
    max-width: none;
    max-height: none;
    .modal-content
      border: none !important;
      border-radius: 0;
      height: 100%;
    .modal-body
      // Place dialog title closer to top of window, & make narrower to avoid unneded horizontal scroll.
      padding: 8px 5px;


.esLD
  padding-top: 4px;

  .btn-group-vertical
    margin: 0 auto;
    display: block;
    width: 19em;

  $width = 350px;
  .esLD_Switch
    max-width: $width;
    margin-left: auto;
    margin-right: auto;

  form
    max-width: $width;
    margin: 0 auto;
    // If there's no footer below, with whitespace & a Cancel button, add some margin instead.
    &:last-child
      margin-bottom: 30px;

  input
    width: 300px !important;
  .esCreateUser input#e2eUsername
    width: 262px !important;  // because of the [@] in front [7RFWUQ2]
  .input-group-addon
    background: hsl(0, 0%, 98.3%); // [7RFWUQ2]

  .icon-google
    background: hsl(230, 91%, 66%);
    &:before
      margin-right: 5px;
  .icon-facebook
    background: #4267B2;
    // Remove icon; it breaks FB's brand guidelines. Us .s_FbIcon instead, see just
    // below, + .ts file. For now, don't remove .icon-facebook â€” needed for button size.
    &::before
      display: none;
  .s_FbIcon
    display: inline-block;
    max-width: 18px;
    margin-right: 7px;
  .icon-twitter
    background: #00bced;
    &:before
      margin-right: 5px;
      font-size: 107%;
  .icon-github-circled
    background: #6d6d6d;
    &:before
      margin-right: 5px;
      font-size: 112%;

  .icon-google,
  .icon-facebook,
  .icon-twitter,
  .icon-github-circled
    color: white;
    font-weight: bold;
    border: none;
    padding: 10px 13px 10px 12px;
    margin-bottom: 4px;
    &:not(:last-child)
      margin-right: 3px;
    &:hover
      opacity: 0.85; // would be better if could make them darker on hover, instead of brighter

