

.dw-embedded-editor
  #debiki-editor-controller
    height: 100% !important
  #debiki-editor-placeholder
    display: none


#debiki-editor-placeholder
  height: 300px

#debiki-editor-controller
  position: fixed !important; // !important so jQuery.resizable() won't overwrite
  top: initial;
  bottom: 0
  width: 100%
  height: 300px
  background: hsl(0, 0%, 70%)
  z-index: 1030

  .resizable-t
    height: 15px;

  #editor-after-borders
    position: absolute;
    top: 0;
    right: 15px;
    bottom: 0;
    left: 15px;

  .editor-area
    width: 50%
    position: absolute
    top: 17px
    bottom: 70px

    .editor-area-after-borders
      position: absolute;
      top: 0;
      right: 10px;
      bottom: 0;
      left: 0;

    .title-input
      position: absolute
      top: 20px;
      width: 100%;

    .editor-wrapper
      position: absolute
      top: 20px
      right: 0;
      bottom: 10px
      left: 0

      .editor
        width: 100%
        height: 100%

    .title-input + .editor-wrapper
        top: 50px // make space for title input

    .preview
      height: 100%
      width: 100%

  .preview-area
    width: 50%
    position: absolute
    top: 18px
    right: 0
    bottom: 25px

    .preview
      position: absolute;
      top: 20px;
      left: 0;
      right: 0;
      bottom: 0;
      background: white
      overflow: auto

  .submit-cancel-btns
    position: absolute;
    bottom: 25px;
    button
      margin-right: 5px;
