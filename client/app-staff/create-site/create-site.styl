.esTestSiteWarning
  padding: 1.5em 1em;
  font-size: 18px;


.esCreateSite .input-group
  width: 100%;

.esCreateSite
  .n_Err
    color: red;
    font-weight: bold;
    .n_Instead
      color: #333;
      font-weight: normal;
      margin-left: 0.4ex;
      samp
        margin-left: 0.7ex;

#dw-react-create-site

  h1
    margin-bottom: 40px;

  .esCreateSite_email
    max-width: 400px;

  .btn
    margin-right: 12px;

  form
    max-width: 580px;

  .n_InpSec
    margin-bottom: 40px;
    &:has(.s_PatInp_Err)
      // The error occupies some space, so less margin needed.
      margin-bottom: 30px;

  #dwLocalHostname
    display: inline;
    text-align: right;
    font-family: monospace;
    width: 270px;

  kbd
    background: white;
    color: black;
    font-size: 14px;
    box-shadow: none;
